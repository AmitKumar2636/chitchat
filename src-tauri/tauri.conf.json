{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Chitchat",
  "version": "0.1.7",
  "identifier": "com.chitchat.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Chitchat",
        "width": 900,
        "height": 650,
        "minWidth": 600,
        "minHeight": 400
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "createUpdaterArtifacts": true
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDNFRjJEMDFFRkQzQzI3OTQKUldTVUp6ejlIdER5UHBodzBUWUhqL203R3VONHB2MThsM3IwZjlUT2d4bXQ5Wk5Mb3JUVWdNbHAK",
      "endpoints": [
        "https://github.com/AmitKumar2636/chitchat/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
